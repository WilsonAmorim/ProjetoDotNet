@using Microsoft.AspNetCore.Components.Authorization
@using PpeFrontend.Services
@using System.Security.Claims

@inject AuthenticationStateProvider AuthProvider
@inject IJSRuntime JS
@inject NavigationManager Nav


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="">
      <img src="assets/images/logoPrimeiroe.jpg" class="img-fluid" style="height: 80px; width: 10" />
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <AuthorizeView Roles="usuario">
          <li class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
              <span class="bi bi-house-door-fill-nav-menu"></span> Tela Principal
            </NavLink>
          </li>
          <li class="nav-item">
            <NavLink class="nav-link" href="counter">
              <span class="bi bi-plus-square-fill-nav-menu"></span> Conferências
            </NavLink>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <span class="bi bi-list-nested-nav-menu"></span> Tarefas
            </a>
            <ul class="dropdown-menu">
              <li>
                <NavLink class="dropdown-item" href="/minhas-tarefas">Minhas Tarefas</NavLink>
              </li>
              <li>
                <NavLink class="dropdown-item" href="/criar-tarefa">Criar Tarefa</NavLink>
              </li>
            </ul>
          </li>

        </AuthorizeView>
        <AuthorizeView Roles="admin">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <span class="bi bi-gear-fill"></span> Administração
            </a>
            <ul class="dropdown-menu">
              <li>
                <NavLink class="dropdown-item" href="usuarios">Configuração</NavLink>
              </li>
              <li>
                <NavLink class="dropdown-item" href="relatorios">Atualizar Base</NavLink>
              </li>
              <li>
                <NavLink class="dropdown-item" href="relatorios">Daskboard</NavLink>
              </li>
              <li class="nav-item">
                <NavLink class="nav-link btn btn-outline-light" href="login">Entrar</NavLink>
              </li>
            </ul>
          </li>
        </AuthorizeView>

        <AuthorizeView Roles="gestor">
          <li class="nav-item">
            <NavLink class="nav-link" href="dashboard">
              <span class="bi bi-bar-chart-fill"></span> Dashboard
            </NavLink>
          </li>
        </AuthorizeView>
      </ul>
    </div>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <AuthorizeView>
          <Authorizing>
            <span class="text-muted">Carregando...</span>
          </Authorizing>

          <NotAuthorized>
            <li class="nav-item">
              <NavLink class="nav-link btn btn-outline-light" href="login">Entrar</NavLink>
            </li>
          </NotAuthorized>


          <Authorized>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" href="#">

                <span>@(string.IsNullOrEmpty(context.User.Identity?.Name) ? "usuario" :
                                    context.User.Identity.Name)</span>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <NavLink class="dropdown-item" href="perfil">Meus dados</NavLink>
                </li>
                <li>
                  <NavLink class="dropdown-item" href="alterar-senha">Alterar senha</NavLink>
                </li>
                <li>
                  <hr class="dropdown-divider" />
                </li>
                <li>
                  <button class="dropdown-item text-danger" @onclick="Logout">
                    <i class="bi bi-box-arrow-right"></i> Sair
                  </button>
                </li>
              </ul>
            </li>
          </Authorized>
        </AuthorizeView>
      </ul>
    </div>

  </div>
</nav>

@code {
  async Task Logout()
  {
    await JS!.InvokeVoidAsync("localStorage.removeItem", "authToken");
    ((JwtAuthenticationStateProvider)AuthProvider!).NotifyUserLogout();
    Nav!.NavigateTo("login", forceLoad: true);
  }

  private void MinhasTarefas()
  {
    Nav!.NavigateTo("/minhas-tarefas", forceLoad: true);
  }

  private void CriarTarefas()
  {
    Nav.NavigateTo("/criar-tarefa", forceLoad: true);
  }
}